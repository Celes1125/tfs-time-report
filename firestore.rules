rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the allowedUsers collection for any authenticated user
    match /allowedUsers/{userEmail} {
      allow get: if request.auth != null;
    }

    // Users can only read and write their own time reports
    match /users/{userId}/timeReports/{timeReportId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}